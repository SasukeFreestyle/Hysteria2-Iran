{
   "log":{
      "level":"info",
      "timestamp":true
   },
   "experimental":{
      "cache_file":{
         "enabled":true,
         "path":"/home/USERNAME/hy2/cache.db"
      }
   },
   "inbounds":[
      {
         "tag":"hy2-in",
         "type":"hysteria2",
         "listen":"::",
         "listen_port":443,
         "udp_timeout":180,
         "up_mbps":0,
         "down_mbps":0,
         "obfs":{
            "type":"salamander",
            "password":"password-one"
         },
         "users":[
            {
               "name":"user",
               "password":"password-two"
            }
         ],
         "ignore_client_bandwidth":true,
         "tls":{
            "enabled":true,
            "certificate_path":"/home/USERNAME/hy2/ca.crt",
            "key_path":"/home/USERNAME/hy2/ca.key"
         }
      }
   ],
   "dns":{
      "disable_cache":true,
      "servers":[
         {
            "tag":"DNS",
            "address":"local",
            "address_strategy":"prefer_ipv4",
            "detour":"direct"
         }
      ]
   },
   "route":{
      "rules":[
         {
            "inbound":"hy2-in",
            "action":"sniff"
         },
         {
            "action":"reject",
            "protocol":[
               "bittorrent",
               "dtls"
            ]
         },
         {
            "inbound":"hy2-in",
            "action":"resolve",
            "strategy":"prefer_ipv4",
            "server":"DNS"
         },
         {
            "ip_is_private":true,
            "action":"reject"
         },
         {
            "action":"reject",
            "rule_set":[
               "geoip-cn",
               "geoip-ir",
               "geoip-ru",
               "geoip-phishing",
               "geoip-malware",
               "geoip-private",
               "geosite-ir",
               "geosite-malware",
               "geosite-cryptominers",
               "geosite-phishing"
            ]
         },
         {
            "action":"reject",
            "domain_suffix":[
               "web.bale.ir",
               "dt.beyla.site",
               "beyla.site",
               "intrack.ir",
               "divar.ir",
               "dbankcloud.asia",
               "pullcm.com",
               "pullcf.com",
               "intrack.io"
            ]
         }
      ],
      "rule_set":[
         {
            "tag":"geoip-cn",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-cn.srs"
         },
         {
            "tag":"geoip-ir",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-ir.srs"
         },
         {
            "tag":"geoip-ru",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-ru.srs"
         },
         {
            "tag":"geosite-ir",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://github.com/bootmortis/sing-geosite/releases/latest/download/geosite-ir.srs"
         },
         {
            "tag":"geoip-phishing",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-phishing.srs"
         },
         {
            "tag":"geosite-phishing",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geosite-phishing.srs"
         },
         {
            "tag":"geoip-malware",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-malware.srs"
         },
         {
            "tag":"geosite-malware",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geosite-malware.srs"
         },
         {
            "tag":"geoip-private",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-private.srs"
         },
         {
            "tag":"geosite-cryptominers",
            "type":"remote",
            "format":"binary",
            "update_interval":"3d",
            "url":"https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geosite-cryptominers.srs"
         }
      ]
   },
   "outbounds":[
      {
         "type":"direct",
         "tag":"direct"
      }
   ]
}
